<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_back">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1. 나에대한 소개"
        android:textSize="10pt"
        android:textStyle="bold"
        android:typeface="serif"/>

    <ImageView
        android:id="@+id/wonder"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/myphoto"
        android:layout_toLeftOf="@id/introduce"/>

    <TextView
        android:id="@+id/introduce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름 : 김부권\n나이 : 22살(만21살)\n사는 곳 : 대전광역시 유성구 노은동\n취미 : 축구\n성격 : 밝음, 인사성 짱, 친밀도 짱"
        android:layout_marginTop="110dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/popup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/introduce"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"
        android:text="나에대한 부가적인 설명"/>

    <Button
        android:id="@+id/exit_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뒤로가기"
        android:layout_marginTop="520dp"/>

</RelativeLayout>